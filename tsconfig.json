// tsconfig.json
{
    "compilerOptions": {
      "target": "es5",                                  /* Set the JavaScript language version for emitted JavaScript and include compatible library declarations. */
      "lib": ["ES6"], 
      "module": "commonjs",
      "outDir": "./dist",
      "strict": true,
      "esModuleInterop": true,
      "noImplicitAny": true,  
      "forceConsistentCasingInFileNames": true, 
      "skipLibCheck": true
    },
    "include": [
      "src/**/*.ts", // Include all TypeScript files in the src directory
      "./src/**/*.ts", // Include all TypeScript files in the src directory
      "./src/routes/api/full/**/*.ts", // Include all TypeScript files in the full directory
      "./src/routes/api/output/**/*.ts", // Include all TypeScript files in the output directory
      "tests/**/*.ts" // Include test files
, "spec/imagesSpec.ts"    ],
    "exclude": [
      "node_modules"
    ]
  }
  